		"@types/sentiment": "^5.0.1",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"esbuild": "^0.15.10",
		"eslint": "^8.53.0",
		"fs-extra": "^11.1.1",
		"fs-promise": "^2.0.3",
		"jest": "^29.6.2",
